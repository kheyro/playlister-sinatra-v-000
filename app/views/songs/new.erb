<form class="" action="/songs" method="post">

  <label for="Name">Song name: </label><input type="text" name="song[name]" id="Name" value="">

  <br><br>

  <h3>Select a genre:</h3>
  <% @genres.each do |genre| %>
    <label for="<%= genre.name %>"><%= genre.name %></label><input type="checkbox" name="song[genre_ids]" id="<%= genre.name %>" value="<%= genre.id %>">
  <% end %>

  <br><br>

  <h3>Select an artist:</h3>
  <% @artists.each do |artist| %>
    <label for="<%= artist.name %>"><%= artist.name %></label><input type="checkbox" name="song[artist_id]" id="<%= artist.name %>" value="<%= artist.id %>">
  <% end %>

  <br><br>

  <h3>or, create an artist:</h3>
  <input type="text" name="artist_name" id="Artist Name" value="">

  <br><br>

  <input type="submit" name="Create" id="Create" value="Create">
</form>
